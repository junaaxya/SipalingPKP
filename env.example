# Environment Configuration
# Copy this file to .env.local and update the values as needed

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api

# App Configuration
VITE_APP_NAME=Sipaling PKP
VITE_APP_VERSION=1.0.0

# Development Configuration
VITE_DEBUG=true

# Google Maps Configuration
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
# Optional: Map ID for advanced markers (create at https://console.cloud.google.com/google/maps-apis)
# Recommended: Use Vector map type for better performance and styling options
# If not provided, will use default Map ID for development
VITE_GOOGLE_MAPS_MAP_ID=

# Google OAuth Configuration
# Get your Client ID from https://console.cloud.google.com/apis/credentials
# Create OAuth 2.0 Client ID with authorized JavaScript origins and redirect URIs
VITE_GOOGLE_CLIENT_ID=your_google_oauth_client_id_here

# Reverse Geocoding (optional)
# Configure this when backend endpoint is available to convert coordinates into administrative regions
VITE_LOCATION_REVERSE_GEOCODE_URL=
